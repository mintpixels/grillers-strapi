{
  "kind": "collectionType",
  "collectionName": "regions",
  "info": {
    "singularName": "region",
    "pluralName": "regions",
    "displayName": "Region",
    "description": "Multi-region support for internationalization and hreflang tags"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "RegionCode": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 5
    },
    "RegionName": {
      "type": "string",
      "required": true
    },
    "CurrencyCode": {
      "type": "string",
      "required": true,
      "maxLength": 3
    },
    "Locale": {
      "type": "string",
      "required": true
    },
    "FlagImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "Active": {
      "type": "boolean",
      "default": true,
      "required": false
    },
    "IsDefault": {
      "type": "boolean",
      "default": false,
      "required": false
    }
  }
}

