{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipe",
    "description": "Structured recipe content type"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title",
      "required": true
    },
    "ShortDescription": {
      "type": "text"
    },
    "Image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "PublishedDate": {
      "type": "date"
    },
    "Servings": {
      "type": "string"
    },
    "PrepTime": {
      "type": "string"
    },
    "CookTime": {
      "type": "string"
    },
    "TotalTime": {
      "type": "string"
    },
    "Ingredients": {
      "type": "component",
      "repeatable": true,
      "component": "recipe.ingredient"
    },
    "Steps": {
      "type": "component",
      "repeatable": true,
      "component": "recipe.step"
    },
    "NutritionalInfo": {
      "type": "text"
    },
    "Tags": {
      "type": "string"
    }
  }
}
